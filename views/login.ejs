<%- include('partials/header') %>

  <section class="formContainer">
    <h2>Login</h2>
    <form action="/login" id="loginForm" method="POST">
      <label>
        <p>Email</p>
        <input type="email" name="email" required placeholder="Your email">
      </label>
      <label class="passLabel">
        <p>Password</p>
        <input type="password" name="password" id="password" minlength="6" maxlength="50" placeholder="Your password"
          required>
        <span class="togglePass" onclick="togglePassword()"><i id="toggleIcon" class="fa-solid fa-eye-slash"></i></span>
      </label>
      <div class="actions">
        <button type="submit">Login</button>
        <span>Do not have a account?
          <a href="/register">Register</a></span>
      </div>
    </form>
  </section>

  <%- include('partials/footer') %>